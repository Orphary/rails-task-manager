<div class="container text-center">
  <blockquote class="blockquote">
    <h1>Modification d'une tâche</h1>
  </blockquote>
</div>
<div class="container">
  <%= form_with model: @task do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control m-2", placeholder: "Titre de la tâche " %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: "form-control m-2", placeholder: "Description de la tâche" %>
    </div>
    <div class="form-check">
      <%= f.label :completed, class: "form-check-label" %>
      <%= f.check_box :completed, class: "form-check-input" %>
    </div>
      <%= f.submit class: "btn btn-primary m-2" %>
  <% end %>
</div>

<%= link_to "Annuler la modification", task_path %>
