<h1>Hello from the other side</h1>

<div class="container w-50">
  <ol class="list-group list-group-numbered">
    <% @tasks.each do |task| %>
    <li class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <div class="fw-bold"><%= link_to task.title, task_path(task) %></div>
        <%= task.details %>
      </div>
      <div class="d-flex">
        <input type="checkbox" class="align-item-center" <%= task.completed ? "checked" : "" %>>
      </div>
      <span class="badge bg-danger rounded-pill"><%= link_to '<i class="text-white fa-solid fa-trash-can"></i>'.html_safe, task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></span>
    </li>
    <% end %>
  </ol>
  <%= link_to "Create new task", new_task_path %>
</div>
